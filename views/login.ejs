<!DOCTYPE html>
<html>
<head>
  <title>Login - Retrotech</title>
  <style>
    /* Body with animated gradient */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #0073e6, #00b4d8, #90e0ef, #caf0f8);
      background-size: 300% 300%;
      animation: gradientShift 8s ease infinite;
      margin: 0;
      padding: 0;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Logo Section */
    .logo-container {
      text-align: center;
      padding: 30px 0 10px;
      animation: fadeDown 1.5s ease;
    }

    .logo-container img {
      height: 80px;
      max-width: 300px;
    }

    @keyframes fadeDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Centered Card */
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: calc(100vh - 120px);
    }

    .login-box {
      background: rgba(255, 255, 255, 0.95);
      padding: 40px 30px;
      border-radius: 15px;
      width: 380px;
      text-align: center;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2), 0 0 30px rgba(0, 115, 230, 0.2);
      animation: fadeIn 1.2s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }

    .login-box h2 {
      color: #0073e6;
      font-size: 26px;
      margin-bottom: 25px;
      letter-spacing: 1px;
    }

    .login-box label {
      font-weight: 600;
      display: block;
      margin-bottom: 5px;
      text-align: left;
      color: #333;
    }

    .login-box input[type="text"],
    .login-box input[type="password"] {
      width: 100%;
      padding: 12px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
      transition: all 0.3s ease;
    }

    .login-box input:focus {
      border-color: #0073e6;
      outline: none;
      box-shadow: 0 0 8px rgba(0, 115, 230, 0.4);
    }

    .login-box button {
      width: 100%;
      padding: 12px;
      background: linear-gradient(135deg, #0073e6, #00b4d8);
      color: #fff;
      font-size: 17px;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      letter-spacing: 1px;
      transition: all 0.3s ease;
    }

    .login-box button:hover {
      background: linear-gradient(135deg, #005bb5, #0096c7);
      transform: translateY(-2px);
      box-shadow: 0 5px 12px rgba(0, 115, 230, 0.4);
    }

    .error-message {
      color: red;
      text-align: center;
      margin-bottom: 15px;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <!-- Logo -->
  <div class="logo-container">
    <a href="https://imgbb.com/" target="_blank">
      <img src="https://i.ibb.co/HTjXVFtf/recto-logo-1.jpg" alt="Retrotech Logo">
    </a>
  </div>

  <!-- Login Form -->
  <div class="container">
    <div class="login-box">
      <h2>User Login</h2>
      <% if (error) { %>
        <p class="error-message"><%= error %></p>
      <% } %>
      <form action="/login" method="POST">
        <label>Username</label>
        <input type="text" name="username" required>

        <label>Password</label>
        <input type="password" name="password" required>

        <button type="submit">Login</button>
      </form>
    </div>
  </div>

</body>
</html>
